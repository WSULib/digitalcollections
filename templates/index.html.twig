{% block title %}Home{% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}

{% block content %}

    <style>
        #masthead {            
            margin-top:240px;
            background-color:rgba(241, 239, 229, 0.9);
            padding:20px;
        }
        .main_content {
            margin-top:10px;
            background-color:white;
            padding:20px;
        }
        .main_content a {
            /*text-decoration: underline;*/
        }
        .main_nav_button {
            background-color:rgba(241, 239, 229, 1);
            padding:10px;
        }
        .main_nav_button:hover {
            background-color:rgba(241, 239, 229, .2);            
        }
    </style>

    <div class="row" style="position:absolute;">
        <div class="col-md-12">
            <img src="img/banner_skyline.jpg" />
        </div>
    </div>

    <div class="container">

        <div  class="row">

