{% import "macros.html.twig" as m %}
{% extends "item.html.twig" %}

{% block item_content %}

	<div id="viewer">
		<iframe title="Mirador" src="/mirador?id={{data.response.pid}}&type=BookView" allowfullscreen="true" webkitallowfullscreen="true" mozallowfullscreen="true" height="740px" width="100%"></iframe>		
	</div>

<h3 style="width:100%; text-align:center; margin-top:10px">Book Viewing Options</h3>

<style type="text/css">
	.viewer {
		width:100%;
		border-radius:10px;
		/*border-width:2px;	
    	border-style:dashed;
    	border-color:#839394;*/
	}
	.viewer:hover {
		background-color:#c7c7c7;
	}
	.viewer span {
		font-weight: bold;
	}
	.viewer ul {
		margin-top:10px;
	}
	.viewer li {
		font-size:75%;
	}
</style>

<div class="row">
	<div class="col-md-6">
		<a target="_blank" href="/mirador?id={{data.response.pid}}&type=BookView"><button type="btn" class="btn viewer">
			<span>Mirador</span>
			<br>
			<ul>
				<li>Zooming and Scanning</li>
				<li>Side-by-Side Book Comparison</li>
			</ul>
		</button></a>
	</div>
	<div class="col-md-6">
		<a target="_blank" href="/eTextReader/eTextReader.php?ItemID={{data.response.pid}}#page/1/mode/2up"><button type="btn" class="btn viewer">
			<span>BookReader</span>
			<br>
			<ul>
				<li>Full-Text Search</li>
				<li>Page Flipping</li>
				<li>Image Clipping</li>
			</ul>
		</button></a>
	</div>
</div>

<div class="row" style="margin-top:10px;">
	<div class="col-md-6">
		<a target="_blank" href="/item/{{data.response.pid}}/file/PDF_FULL"><button type="btn" class="btn viewer">
			<span>PDF</span>
			<br>
			<ul>
				<li>Cross-broswer compatible</li>
				<li>Full-Text Overlay</li>
			</ul>
		</button></a>
	</div>
	<div class="col-md-6">
		<a target="_blank" href="/item/{{data.response.pid}}/analysis"><button type="btn" class="btn viewer">
			<span>Analysis</span>
			<br>
			<ul>				
				<li>Full-text analysis</li>
				<li>Annotation</li>
			</ul>
		</button></a>
	</div>
</div>

{% endblock %}
